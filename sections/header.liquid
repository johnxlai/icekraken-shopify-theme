<header class="header">
  <h1>{{ shop.name }}</h1>
  <h3>hello again</h3>
  <!-- Main menu -->

  <ul>
    {% for link in linklists['main-menu'].links -%}
      <li>{{ link.title | link_to: link.url }}</li>
    {%- endfor %}
  </ul>

  {% if section.settings.show_search %}
    <form action="/search">
      <input type="search" name="q">
      <button type="submit">Search</button>
    </form>
  {% endif %}
</header>

<style>
  .header {
    background-color: {{ section.settings.bg }};
  }
</style>

{% stylesheet %}
  .header {
    padding: 20px;
  }
{% endstylesheet %}

{% javascript %}
  console.log('header');
{% endjavascript %}

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_search",
      "label": "Show search form?"
    },
    {
      "type": "color",
      "id": "bg",
      "label": "Background color"
    }
  ]
}
{% endschema %}
